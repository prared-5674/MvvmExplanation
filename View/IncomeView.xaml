<UserControl x:Class="MvvmTrail.View.IncomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="150" Width="345"
        Background="LightGreen">
    <StackPanel>
        <Label Content="Add Income" FontWeight="Bold" FontSize="14" Foreground="Black"/>
        <TextBox Margin="10" Height="23" VerticalAlignment="Top" FontSize="14" BorderBrush="DarkGreen" BorderThickness="2" Text="{Binding Income}"/>
    </StackPanel>
</UserControl>



